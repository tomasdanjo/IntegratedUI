<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pawductive" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textColorHighlight">@color/blue_light</item>
        <item name="android:textColorLink">@color/blue_light</item>
    </style>

    <style name="Theme.Pawductive" parent="Base.Theme.Pawductive" />

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>
</resources>