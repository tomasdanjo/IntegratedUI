<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="@dimen/border_width" android:top="@dimen/border_width">
                <shape>
                    <corners
                        android:topLeftRadius="@dimen/large_number"
                        android:topRightRadius="@dimen/large_number"
                        android:bottomLeftRadius="@dimen/border_radius"
                        android:bottomRightRadius="@dimen/border_radius"/>
                    <solid android:color="@color/blue_dark" />
                </shape>
            </item>
            <item android:bottom="@dimen/border_width" android:right="@dimen/border_width">
                <shape>
                    <gradient
                        android:startColor="@color/blue_light"
                        android:endColor="@color/blue_dark"
                        android:angle="-90" />
                    <stroke android:width="@dimen/border_width" android:color="@color/blue_dark" />
                    <corners android:radius="@dimen/border_radius"
                        android:topLeftRadius="@dimen/large_number"
                        android:topRightRadius="@dimen/large_number"
                        android:bottomLeftRadius="@dimen/border_radius"
                        android:bottomRightRadius="@dimen/border_radius"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>