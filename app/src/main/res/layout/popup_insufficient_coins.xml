<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_horizontal_padding"
        android:layout_marginTop="@dimen/screen_horizontal_padding"
        android:layout_marginEnd="@dimen/screen_horizontal_padding"
        android:layout_marginBottom="@dimen/screen_horizontal_padding"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:paddingRight="@dimen/border_width"
        android:paddingBottom="@dimen/border_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_header_red"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingTop="@dimen/spacing_regular"
            android:paddingRight="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_regular">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Insufficient Coins"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/negative_border_width"
            android:background="@drawable/popup_body"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="Top-up Coins?"
                android:textSize="@dimen/font_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/border_width"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_red"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_small">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/border_width"
                        android:fontFamily="@font/nunito_bold"
                        android:text="No"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_medium" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>